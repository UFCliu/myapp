<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.liugq.mapper.OilMapper">

	<resultMap id="oilResult" type="com.example.liugq.bean.daily.Oil">
		<result property="id" column="id" />	
		<result property="date" column="date" />	
		<result property="money" column="money" />
		<result property="price" column="price" />	
		<result property="miles" column="miles" />	
		<result property="platenumber" column="platenumber" />
		<result property="monthTotal" column="monthTotal" />	
		<result property="yearTotal" column="yearTotal" />
	</resultMap>
	
  	<select id="getAll" resultMap="oilResult">
    	select * from oil ORDER BY date 
  	</select>
  	
  	<select id="getById" parameterType="Integer" resultMap="oilResult">
    	select * from oil where id = #{id}
  	</select>
  
	<select id="totalMoney" resultType="com.example.liugq.bean.daily.Oil">
		select 
			IFNULL((select sum(money) from oil where DATE_FORMAT(date,'%Y')=DATE_FORMAT(now(),'%Y')),0) yearTotal,
			IFNULL((select sum(money) from oil where DATE_FORMAT(date,'%Y-%m')=DATE_FORMAT(now(),'%Y-%m')),0) monthTotal
 		from oil GROUP by yearTotal 
	</select>
	
	<insert id="insert" parameterType="com.example.liugq.bean.daily.Oil" useGeneratedKeys="true" keyProperty="id" keyColumn="id">
	<![CDATA[
		insert into oil(date,money,price,miles,platenumber)
		values(#{date},#{money},#{price},#{miles},#{platenumber})
	]]>
	</insert>
	
	<update id="update" parameterType="com.example.liugq.bean.daily.Oil">
		update oil set id= #{id} 
			 <if test="date !=null">
				,date= #{date} 
			 </if>
			 <if test="money !=null">
				,money= #{money} 
			 </if>
			 <if test="price !=null">
				,price= #{price} 
			 </if>
			 <if test="miles !=null">
				,miles= #{miles} 
			 </if>
			 <if test="platenumber !=null">
				,platenumber= #{platenumber} 
			 </if>
		where id = #{id}
	</update>
	
	<delete id="delete" parameterType="Integer">
    <![CDATA[
        delete from oil where id = #{id}
    ]]>
    </delete>
</mapper>