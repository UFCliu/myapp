<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.liugq.mapper.ZhenQiMapper">
  <resultMap id="BaseResultMap" type="com.example.liugq.bean.dzm.ZhenQi">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="property_1" jdbcType="VARCHAR" property="property1" />
    <result column="property_2" jdbcType="VARCHAR" property="property2" />
    <result column="second_level_property" jdbcType="VARCHAR" property="secondLevelProperty" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
  </resultMap>
  <sql id="Base_Column_List">
    id, name, property_1, property_2, second_level_property, remark
  </sql>
  
  <!-- 真气数据查询 -->
  <select id="zhenqiQuery" resultMap="BaseResultMap" >
    select 
    <include refid="Base_Column_List" />
     from dzm_zhenqi where 1=1 
    <if test="params.secondLevelProperty != null">
		and second_level_property = #{params.secondLevelProperty}	
	</if>
    <if test="params.property != null">
		and (property_1 = #{params.property} or property_2 = #{params.property})
	</if>
  </select>
  
</mapper>